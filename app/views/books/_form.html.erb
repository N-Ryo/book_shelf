<%= form_with model: book, local: true do |form| %>
  <%= render "shared/errors", obj: book %>
  <div class="form-group">
    <%= form.label I18n.t "attributes.book.title" %><br>
    <%= form.text_field :title, class: "form-control" %>
  </div>
  <div class="form-group">
    <%= form.label I18n.t "attributes.book.new_image" %><br>
    <%= form.file_field :new_image, class: "form-control" %>
  </div>
  <div class="form-group">
    <%= form.label I18n.t "attributes.book.price" %><br>
    <%= form.number_field :price, class: "form-control" %>
  </div>
  <div class="form-group">
    <%= form.label I18n.t "attributes.book.publish_date" %><br>
    <%= form.date_field :publish_date, class: "form-control" %>
  </div>
  <div class="form-group">
    <%= form.label I18n.t "attributes.book.category_id" %>
    <%= form.collection_select :category_id, Category.all, :id, :name , { include_blank: t(".include_blank") },  { class: "form-control" } %>
  </div>
  <div class="form-group">
    <%= form.label I18n.t "attributes.book.description" %><br>
    <%= form.text_area :description, rows: 10, class: "form-control" %>
  </div>
  <%= form.submit class: "btn btn-primary" %>
<% end %>